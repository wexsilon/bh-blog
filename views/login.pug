extends base-html.pug

block variables
    - const pageTitle = 'وبلاگ | ورود';

block extraCss
    link(rel="stylesheet", href="/static/css/login-style.css")

block pageBody
    section.hero.d-flex.justify-content-center
        .row.align-content-center.justify-content-center
            .col.bg-white.rounded.p-4.p-sm-5.pb-3.pb-sm-3
                .container-fluid
                    h3.fw-bolder.text-center(style="font-size: 3rem") ورود
                    //  <p class="text-muted" style="font-size: 0.85rem">لورم ایپسوم</p> 
                    form.needs-validation(novalidate)
                        .row.mx-0.form-floating.mt-5
                            input.form-control#floatingInput(type="text", placeholder, required)
                            label(for="floatingInput") نام کاربری
                        .row.mx-0.form-floating.mt-3
                            input.form-control#floatingPassword(type="password", placeholder, required)
                            label(for="floatingPassword") رمزعبور
                        .mt-5.d-flex.justify-content-between
                            .form-check
                                input.form-check-input#flexCheckDefault(type="checkbox")
                                label.form-check-label.text-muted(style="font-size: 12px", for="flexCheckDefault") مرا به خاطر بسپار
                            div
                                small
                                    a.a-hover(href="#", style="font-size: 12px") رمز خود را فراموش کرده اید؟
                        .row.mt-1.mx-0.text-center
                            button.btn.fs-4.w-100.bg-gradient.btn-dark(type="submit", style="height: 58px") ورود
                    .row.my-3
                        small.text-muted(style="font-size: 14px")
                            | اکانت نداری ؟ 
                            a.a-hover(href="register.html") ثبت نام
                    hr
                    .row.justify-content-center.mb-0
                        .col-6.col-sm-4.text-center
                            a.btn.btn-outline-dark.bg-gradient.text-decoration-none.border-0(href="index.html")
                                | برگشت
                                i.bi.bi-arrow-left.ms-1

block extraJs
    script.
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
  