extends base-html.pug

block variables
    - const pageTitle = 'وبلاگ | ثبت نام';

block extraCss
    link(rel="stylesheet", href="/static/css/register-style.css")

block pageBody
    section.hero.d-flex.justify-content-center
        .row.align-content-center.justify-content-center
            .col.bg-white.rounded.p-4.p-sm-5.pb-3.pb-sm-3
                .container
                    h3.fw-bolder.text-center(style="font-size: 3.5rem") ثبت نام
                    //  <p class="text-muted" style="font-size: 0.85rem">لورم ایپسوم</p> 
                    form.needs-validation(novalidate)
                        .row.mx-0.form-floating.mt-4
                            input.form-control#floatingInput(type="text", placeholder, required)
                            label(for="floatingInput") نام کاربری
                        .row.mx-0.form-floating.mt-2
                            input.form-control#floatingPassword(type="email", placeholder, required)
                            label(for="floatingPassword") ایمیل
                        .row.mx-0.form-floating.mt-2
                            input.form-control#floatingPassword(type="password", placeholder, required)
                            label(for="floatingPassword") رمزعبور
                        .row.mx-0.form-floating.mt-2
                            input.form-control#floatingPassword(type="password", placeholder, required)
                            label(for="floatingPassword") تکرار رمزعبور
                        .mt-3.mb-2.d-flex.justify-content-between
                            .form-check
                                input.form-check-input#flexCheckDefault(type="checkbox", required)
                                label.form-check-label.text-muted(style="font-size: 14px", for="flexCheckDefault")
                                    | تمام 
                                    a.a-hover(href) شرایط
                                    |  را مطالعه کرده و با آن موافقم
                        .row.mt-1.mx-0.text-center
                            button.btn.fs-4.w-100.bg-gradient.btn-dark(type="submit", style="height: 58px") ثبت نام
                        .row.my-3.mx-0
                            small.text-muted(style="font-size: 14px")
                                | قبلا ثبت نام کرددید؟ 
                                a.text-decoration-none(href="login.html", style="font-size: 16px") ورود
                    hr.mt-2
                    .row.justify-content-center.mb-0
                        .col-6.col-sm-4.text-center
                            a.btn.btn-outline-dark.bg-gradient.text-decoration-none.border-0(href="index.html")
                                | برگشت
                                i.bi.bi-arrow-left.ms-1

block extraJs
    script.
        (() => {
            "use strict";
            const forms = document.querySelectorAll(".needs-validation");
            Array.from(forms).forEach((form) => {
                form.addEventListener(
                    "submit",
                    (event) => {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add("was-validated");
                    },
                    false
                );
            });
        })();
  